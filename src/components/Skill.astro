---
import type { Skill } from "@/types/skills";

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
const { color, name } = skill;
---

<div class="relative skill-pill group">
  <div
    class="skill-content relative z-20 group-hover:-translate-y-2 transition-all rounded-lg border text-sm font-medium bg-white border-slate-300 py-2 px-6 inline-flex justify-between items-center gap-2"
  >
    <slot name="icon" />
    {name}
  </div>
  <div class="absolute inset-0 rounded-lg skill-shadow"></div>
</div>

<style define:vars={{ color }}>
  .skill-shadow {
    background-color: var(--color);
  }
  .skill-pill:hover {
    .skill-content {
      border-color: var(--color);
    }
  }
</style>
