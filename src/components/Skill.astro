---
import { cn } from "@/lib/utils";
import type { Skill } from "@/types/skills";

interface Props {
  skill: Skill;
  className?: string;
}

const { skill, className } = Astro.props;
const { color, name } = skill;
---

<div class={cn("relative skill-pill group w-full", className)}>
  <div
    class="group-hover:border-current w-full relative z-20 group-hover:-translate-y-2 transition-all rounded-lg border text-sm font-medium bg-white border-slate-300/80 dark:border-neutral-700/60 dark:bg-neutral-900 py-1.5 px-4 inline-flex justify-center items-center gap-x-2 h-full"
  >
    <slot name="icon" />
    <div class="text-primary">
      {name}
    </div>
  </div>
  <div
    class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity bg-current"
  >
  </div>
</div>

<style define:vars={{ color }}>
  .skill-shadow {
    background-color: var(--color);
  }
  .skill-pill:hover {
    .skill-content {
      border-color: var(--color);
    }
  }
</style>
