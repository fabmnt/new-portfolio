---
import { Image } from "astro:assets";
import { Avatar } from "./ui/avatar";
---

<article class="p-6 border border-slate-300/80 rounded-2xl">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <div>
        <Avatar className="size-10 bg-slate-500/80">
          <Image width='40' height='40' src="/logo.webp" alt="Fabian Montoya" class="rounded-full" />
        </Avatar>
      </div>
      <div>
        <h1 class="font-medium text-lg">Fabian Montoya</h1>
        <p class="text-slate-700">Ingeniero de software Full Stack.</p>
      </div>
    </div>
    <div class="h-full">
      <p class="text-sm">Social media</p>
    </div>
  </div>
</article>