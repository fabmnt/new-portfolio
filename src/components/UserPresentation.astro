---
import LinkedIn from "@/assets/icons/linkedin";
import { MyAvatar } from "@/components/my-avatar";
import GithubIcon from "../assets/icons/github";
import TwitterIcon from "../assets/icons/twitter";
import { EmailDropdown } from "./email-dropdown";
import { NavLink } from "./nav-link";
import { ThemeSwitch } from "./theme-switch";
---

<article
  class="py-6 flex flex-col sm:gap-y-4 gap-y-8 border-b bg-transparent border-slate-300/80 dark:border-slate-900/60"
>
  <div
    class="flex sm:flex-row flex-col sm:items-center justify-between gap-y-4"
  >
    <div class="flex flex-row justify-between items-center sm:gap-x-4">
      <div class="flex sm:flex-row items-center gap-2">
        <div>
          <div class="sm:flex-row-reverse gap-x-2 flex items-center">
            <div class="flex flex-col">
              <div>
                <h1 class="font-medium text-lg">Fabian Montoya</h1>
                <p class="text-sm text-slate-700 dark:text-slate-300">
                  Ingeniero de software
                </p>
              </div>
            </div>
            <div class="h-full">
              <MyAvatar client:load />
            </div>
          </div>
          <!-- <p class="text-slate-700 dark:text-slate-300">
            Ingeniero de Sistemas Full Stack.
          </p> -->
        </div>
      </div>
      <div>
        <ThemeSwitch client:only="react" />
      </div>
    </div>
    <div class="h-full flex justify-between items-center">
      <div class="flex gap-1">
        <NavLink
          href="https://www.linkedin.com/in/fabián-montoya-963247345"
          target="_blank"
        >
          <LinkedIn className="!size-6" />
        </NavLink>
        <NavLink href="https://x.com/fabmntp" target="_blank">
          <TwitterIcon className="!size-5" />
        </NavLink>
        <NavLink href="https://github.com/fabmnt" target="_blank">
          <GithubIcon className="!size-6" />
        </NavLink>
        <EmailDropdown client:load />
      </div>
    </div>
  </div>
  <div>
    <p class="text-pretty text-slate-700 font-thin dark:text-slate-300">
      Diseño, desarrollo e implemento soluciones informáticas que permiten a
      empresas evolucionar su forma de conectar con sus usuarios. Desde
      elegantes páginas comerciales, hasta complejos sistemas de inventario y
      facturación.
    </p>
    <!-- <div>
      <div class="w-fit">
        <BadgeSunshine> Disponible </BadgeSunshine>
      </div>
    </div> -->
  </div>
</article>
